extends layout 

block content 
    h1 #{title}:  #{artist.professional_name}

    if artist_albums.length 
        p #[strong Delete the following albums before deleting the artist:]

        div(style="margin-left: 20px; margin-top: 20px")
            h4 Albums

            dl
            each album in artist_albums
                a(href=album.url)= album.name 
                br

    else 
        p Do you really want to delete this artist?

        form(method="POST", action="").form-group
            input#artistid.form-control(
                type="hidden",
                name="artistid",
                required="true",
                value=artist._id
            )

            button.btn.btn-primary(type="submit") Delete

